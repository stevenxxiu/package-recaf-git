 recaf-ui/src/main/resources/style/code-editor.css | 10 +++++-----
 1 file changed, 5 insertions(+), 5 deletions(-)

diff --git a/recaf-ui/src/main/resources/style/code-editor.css b/recaf-ui/src/main/resources/style/code-editor.css
index 05d111d..51d694c 100644
--- a/recaf-ui/src/main/resources/style/code-editor.css
+++ b/recaf-ui/src/main/resources/style/code-editor.css
@@ -1,10 +1,10 @@
 .code-area {
 	-fx-background-color: -color-bg-default;
-	-fx-accent: -color-accent-7;
+	-fx-accent: -color-accent-9;
     -fx-cursor: text;
 }
 .code-area .text {
-    -fx-fill: -color-base-3;
+    -fx-fill: -color-base-7;
     -fx-font-family: 'JetBrains Mono';
     -fx-font-size: 12px;
 }
@@ -18,7 +18,7 @@ .code-area .paragraph-box {
     -fx-padding: -0.5 0 -0.5 0;
 }
 .code-area .paragraph-box:has-caret {
-    -fx-background-color: -color-base-8;
+    -fx-background-color: -color-base-1;
 }
 .code-area .paragraph-box .paragraph-text {
     -fx-line-spacing: 1;
@@ -38,7 +38,7 @@ .code-area .caret {
 Style for handling selection color.
 */
 .code-area .main-selection {
-    -fx-fill: -color-accent-6;
+    -fx-fill: -color-accent-1;
 }
 
 /*
@@ -78,4 +78,4 @@ .code-area .matched-brace-line .line {
     -fx-border-color: transparent transparent transparent -color-accent-3;
     -fx-border-width: 0 0 0 2px;
     -fx-pref-width: 1;
-}
